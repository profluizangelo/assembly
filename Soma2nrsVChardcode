SYS_EXIT    equ 1
SYS_WRITE   equ 4
STDOUT      equ 1
                    
section .data

    msg1    db  'A soma Ã©: '
    len    equ $ - msg1

section .bss

    res  resb 1
                    
section .text
    global _start

_start:

    mov eax, 3
    mov ebx, 4

    add eax, ebx

    
    add eax, '0'
                    
    mov [res], eax

                    
    mov eax, SYS_WRITE
    mov ebx, STDOUT
    mov ecx, msg1
    mov edx, len
    int 0x80

    mov eax, SYS_WRITE
    mov ebx, STDOUT
    mov ecx, res
    mov edx, 2
    int 0x80

exit:
    mov eax, SYS_EXIT
    xor ebx, ebx
    int 0x80
