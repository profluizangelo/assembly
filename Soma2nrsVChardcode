SYS_EXIT    equ 1
SYS_WRITE   equ 4
STDOUT      equ 1
                    ;associando string em vez de número de endereço de memória (parâmetro EQU define sequencia de texto, como um 'aliás')
section .data

    msg1    db  'A soma é: '
    len    equ $ - msg1

section .bss

    res  resb 1
                    ;variável armazenará o resultado da soma
section .text
    global _start

_start:

    mov eax, 3
    mov ebx, 4

    add eax, ebx

    
    add eax, '0'
                    ; converte de decimal para ascii
    mov [res], eax

                    ; imprime a string msg1
    mov eax, SYS_WRITE
    mov ebx, STDOUT
    mov ecx, msg1
    mov edx, len
    int 0x80

    ; imprime o resultado
    mov eax, SYS_WRITE
    mov ebx, STDOUT
    mov ecx, res
    mov edx, 2
    int 0x80

exit:
    mov eax, SYS_EXIT
    xor ebx, ebx
    int 0x80
